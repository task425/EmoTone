<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:width="80dp"
        android:height="80dp"
        android:gravity="left"
        android:top="8dp"
        >
        <shape
            android:shape="oval">
            <solid
                android:color="@color/red_dark"/>
        </shape>
    </item>

    <item
        android:top="8dp"
        android:width="80dp"
        android:height="80dp"
        android:gravity="right"
        >
        <shape
            android:shape="oval">
            <solid
                android:color="@color/red_dark"/>
        </shape>
    </item>

    <item
        android:top="8dp"
        android:height="80dp"
        android:left="40dp"
        android:right="40dp">
        <shape>
            <solid
                android:color="@color/red_dark"/>
        </shape>

    </item>

    <item
        android:width="80dp"
        android:height="80dp"
        android:gravity="left"
        >
        <shape
            android:shape="oval">
            <solid
                android:color="@color/red"/>
        </shape>
    </item>

    <item
        android:width="80dp"
        android:height="80dp"
        android:gravity="right"
        >
        <shape
            android:shape="oval">
            <solid
                android:color="@color/red"/>
        </shape>
    </item>

    <item
        android:height="80dp"
        android:left="40dp"
        android:right="40dp">
        <shape>
            <solid
                android:color="@color/red"/>
        </shape>

    </item>

</layer-list>