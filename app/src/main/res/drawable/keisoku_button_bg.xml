<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:width="40dp"
        android:height="40dp"
        android:gravity="left"
        android:top="4dp"
        >
        <shape
            android:shape="oval">
            <solid
                android:color="@color/gray_dark"/>
        </shape>
    </item>

    <item
        android:top="4dp"
        android:width="40dp"
        android:height="40dp"
        android:gravity="right"
        >
        <shape
            android:shape="oval">
            <solid
                android:color="@color/gray_dark"/>
        </shape>
    </item>

    <item
        android:top="4dp"
        android:height="40dp"
        android:left="20dp"
        android:right="20dp">
        <shape>
            <solid
                android:color="@color/gray_dark"/>
        </shape>

    </item>

    <item
        android:width="40dp"
        android:height="40dp"
        android:gravity="left"
        >
        <shape
            android:shape="oval">
            <solid
                android:color="@color/gray"/>
        </shape>
    </item>

    <item
        android:width="40dp"
        android:height="40dp"
        android:gravity="right"
        >
        <shape
            android:shape="oval">
            <solid
                android:color="@color/gray"/>
        </shape>
    </item>

    <item
        android:height="40dp"
        android:left="20dp"
        android:right="20dp">
        <shape>
            <solid
                android:color="@color/gray"/>
        </shape>

    </item>

</layer-list>