<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical"
    android:theme="@style/Theme.styles">

    <com.google.mlkit.vision.demo.CameraSourcePreview
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.mlkit.vision.demo.GraphicOverlay
        android:id="@+id/graphic_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/yellow"
            android:elevation="5dp"
            android:orientation="horizontal"
>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:fontFamily="@font/logo"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:text="@string/emotone"
                android:textColor="@color/white"
                android:textSize="32sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">


            <ImageButton
                android:id="@+id/check"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:background="@drawable/syorui_bg"
                android:elevation="5dp"
                android:padding="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/reload" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_gravity="bottom"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="計測中..."
                    android:textColor="#333"
                    android:textSize="20dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="25dp"
                    android:alpha="0.75"
                    android:background="@drawable/simasima" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="25dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/smile"
                            android:layout_width="100dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:background="@drawable/smile_bg"
                            android:fontFamily="@font/logo"
                            android:gravity="center"
                            android:paddingBottom="5dp"
                            android:text="笑顔"
                            android:textColor="#333"

                            android:textSize="16dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <ImageView
                                    android:id="@+id/imageViewSmile1"
                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewSmile2"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewSmile3"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewSmile4"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewSmile5"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewSmile6"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewSmile7"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewSmile8"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewSmile9"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewSmile10"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                            </LinearLayout>


                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingLeft="10dp">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:background="@drawable/seekbar_progress_smile_bg" />

                                <SeekBar
                                    android:id="@+id/seekbarSmile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:max="100"
                                    android:min="0"
                                    android:paddingStart="10dp"
                                    android:paddingLeft="10dp"
                                    android:paddingEnd="10dp"
                                    android:progressDrawable="@drawable/seekbar_progress_smile"
                                    android:splitTrack="false"
                                    android:thumb="@drawable/seekbar_thumb_smile"
                                    android:thumbOffset="10dp" />

                            </FrameLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/joy"
                            android:layout_width="100dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"

                            android:background="@drawable/calm_bg"
                            android:fontFamily="@font/logo"
                            android:gravity="center"
                            android:paddingBottom="5dp"
                            android:text="喜び"
                            android:textColor="#333"
                            android:textSize="16dp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:weightSum="10">

                                <ImageView
                                    android:id="@+id/imageViewJoy1"
                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewJoy2"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewJoy3"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewJoy4"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewJoy5"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewJoy6"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewJoy7"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewJoy8"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewJoy9"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewJoy10"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                            </LinearLayout>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingLeft="10dp">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:background="@drawable/seekbar_progress_calm_bg" />

                                <SeekBar
                                    android:id="@+id/seekbarJoy"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:max="50"
                                    android:min="0"
                                    android:paddingStart="10dp"
                                    android:paddingLeft="10dp"
                                    android:paddingEnd="10dp"
                                    android:progressDrawable="@drawable/seekbar_progress_calm"
                                    android:splitTrack="false"
                                    android:thumb="@drawable/seekbar_thumb_calm"
                                    android:thumbOffset="10dp" />

                            </FrameLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/energy"
                            android:layout_width="100dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"

                            android:background="@drawable/joy_bg"
                            android:fontFamily="@font/logo"
                            android:gravity="center"
                            android:paddingBottom="5dp"
                            android:text="元気度"
                            android:textColor="#333"
                            android:textSize="16dp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_weight="10"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageViewEnergy1"
                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewEnergy2"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewEnergy3"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewEnergy4"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewEnergy5"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewEnergy6"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewEnergy7"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewEnergy8"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewEnergy9"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewEnergy10"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />


                            </LinearLayout>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingLeft="10dp">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:background="@drawable/seekbar_progress_joy_bg" />

                                <SeekBar
                                    android:id="@+id/seekbarEnergy"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:max="50"
                                    android:min="0"
                                    android:paddingStart="10dp"
                                    android:paddingLeft="10dp"
                                    android:paddingEnd="10dp"
                                    android:progressDrawable="@drawable/seekbar_progress_joy"
                                    android:splitTrack="false"
                                    android:thumb="@drawable/seekbar_thumb_joy"
                                    android:thumbOffset="10dp" />

                            </FrameLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/anger"
                            android:layout_width="100dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"

                            android:background="@drawable/energy_bg"
                            android:fontFamily="@font/logo"
                            android:gravity="center"
                            android:paddingBottom="5dp"
                            android:text="怒り"
                            android:textColor="#333"
                            android:textSize="16dp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <ImageView
                                    android:id="@+id/imageViewAnger1"
                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewAnger2"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewAnger3"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewAnger4"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewAnger5"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewAnger6"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewAnger7"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewAnger8"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewAnger9"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/imageViewAnger10"

                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_weight="1" />

                            </LinearLayout>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingLeft="10dp">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:background="@drawable/seekbar_progress_energy_bg" />

                                <SeekBar
                                    android:id="@+id/seekbarAnger"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:max="50"
                                    android:min="0"
                                    android:paddingStart="10dp"
                                    android:paddingLeft="10dp"
                                    android:paddingEnd="10dp"
                                    android:progressDrawable="@drawable/seekbar_progress_energy"
                                    android:splitTrack="false"
                                    android:thumb="@drawable/seekbar_thumb_energy"
                                    android:thumbOffset="10dp" />

                            </FrameLayout>


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </FrameLayout>
        </LinearLayout>


    </LinearLayout>


</FrameLayout>

